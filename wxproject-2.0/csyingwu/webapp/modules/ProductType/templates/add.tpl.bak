<script type="text/javascript">
function check(f){	
  if(Trim(f.pname.value)==""){
    alert("产品分类名称不能为空！");
    f.pname.value = '';
    return false;
  }
  if(Trim(f.cost.value)==""){
    alert("分类排序号不能为空！");
    f.cost.value = '';
    return false;
  }
  f.cost.value = Trim(f.cost.value);
  if(!/^(([1-9][0-9]*)|0)(\.[0-9]{1,2})?$/.test(f.cost.value)){
    alert("产品排序号必须为数字，且格式为 ####.## ！");
    f.cost.value = '';
    return false;
  }
  return true;
}
</script>
